    <script>
        function predict() {
            document.getElementById("error").style.display = "none";
            var e1 = document.getElementById("select1");
            var value1 = e1.value;
            var away = e1.options[e1.selectedIndex].text;


            var e2 = document.getElementById("select2");
            var value2 = e2.value;
            var home = e2.options[e2.selectedIndex].text;




            let away_point_spread = document.getElementById("ps1").value
            let away_over_under = document.getElementById("ou1").value
            let away_projected_score = document.getElementById("pjs1").value
            let home_point_spread = document.getElementById("ps2").value
            let home_over_under = document.getElementById("ou2").value
            let home_projected_score = document.getElementById("pjs2").value

            if (away_point_spread == '' || away_projected_score == '' || away_over_under == '' || home_over_under == '' || home_point_spread == '' || home_projected_score == '') {
                document.getElementById("error").innerHTML = "Please enter all the fields !!! ";
                document.getElementById("error").style.display = "block";
                return;
            }
            document.getElementById("sohan").innerHTML = "Predicting..."


            fetch("/nfl", { method: "POST", headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ away, home, away_over_under, away_point_spread, away_projected_score, home_over_under, home_point_spread, home_projected_score }) }).then((res) => {
                return res.json();
            }).then((fres) => {
                if (fres.code == 404) {
                    alert("Some Error Occured !!!")
                }
                else {
                    document.getElementById("sohan").innerHTML = "Predict"
                    let a = JSON.parse(fres.message).a[0]
                    let b = JSON.parse(fres.message).b[0]


                    for (let i = 0; i < 13; i++) {
                        document.getElementById("a" + (i + 1).toString()).innerHTML = a[i]
                        document.getElementById("b" + (i + 1).toString()).innerHTML = b[i]
                    }

                }
            })



        }
        document.getElementById("sohan").innerHTML = "Predict"
