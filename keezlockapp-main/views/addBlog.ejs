                        <label for="exampleFormControlTextarea1"
                            class="form-label fs-4 fw-semibold text-secondary">Description</label>
                        <textarea class="form-control" id="body" rows="13"
                            placeholder="Enter Blog Description Here..." ></textarea>
                    </div>
                    <div class="mb-3 text-center">
                        <label for="exampleFormControlInput2" class="form-label fs-4 fw-semibold text-secondary">Image
                            Link</label>
                        <input type="text" class="form-control" id="imgLink"
                            placeholder="Enter Image Link" />
                    </div>
                    <div class="text-end">
                        <button class="btn btn-secondary fw-semibold" onclick="save()">Save</button>
                    </div>
