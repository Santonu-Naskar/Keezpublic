<script>
    function save()
    {
        let head = document.getElementById("head").value
        let body = document.getElementById("body").value
        let imgLink = document.getElementById("imgLink").value
        fetch("/newBlog", {method:"POST", headers: {'Content-Type': 'application/json'}, body: JSON.stringify({head, body, imgLink})}).then((res)=>{
            return res.json()
        }).then((f_res)=>{
            if(f_res.code==200)
            {
                alert(f_res.message)
                window.location.href = "/admin"
            }
            else
            {
                alert("error")
                window.location.href = "/admin"
            }
        })

    }
</script>









