    <script>
        function predict() {
            var e1 = document.getElementById("select1");
            var value1 = e1.value;
            var away = e1.options[e1.selectedIndex].text;


            var e2 = document.getElementById("select2");
            var value2 = e2.value;
            var home = e2.options[e2.selectedIndex].text;
            document.getElementById("sohan").innerHTML = "Predicting..."




            fetch("/mlb", { method: "POST", headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ away, home }) }).then((res) => {
                return res.json();
            }).then((fres) => {
                if (fres.code == 404) {
                    alert("Some Error Occured !!!")
                }
                else {
                    document.getElementById("sohan").innerHTML = "Predict"
                    let message = JSON.parse(fres.message).a
                    document.getElementById("a").innerHTML = message[0]
                    document.getElementById("b").innerHTML = message[1]
                    document.getElementById("c").innerHTML = message[2]
                    document.getElementById("d").innerHTML = message[3]
                    document.getElementById("e").innerHTML = message[4]
                    document.getElementById("f").innerHTML = message[5]

                }
            })



        }
        document.getElementById("sohan").innerHTML = "Predict"
